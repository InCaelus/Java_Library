    public static void BookInfo(Scanner sc, String genre, String[] books, String[] details) {

        int subChoice = -1; // 책 상세 메뉴 선택 값

        while (subChoice != 0) {

            // 현재 장르의 책 목록 출력
            System.out.println("===== " + genre + " 책 목록 =====");
            for (int i = 0; i < books.length; i++) {
                System.out.println((i + 1) + ". " + books[i]);
            }
            System.out.println("0. 뒤로가기");
            System.out.print("원하는 책 번호를 선택하세요: ");

            subChoice = sc.nextInt();
            sc.nextLine();

            if (subChoice == 0) {
                // 상위 메뉴로 복귀
                System.out.println("이전으로 돌아갑니다.");
            }
            else if (subChoice > 0 && subChoice <= books.length) {
                // 선택된 책의 제목과 설명 출력
                System.out.println("=== 선택한 책 정보 ===");
                System.out.println("제목: " + books[subChoice - 1]);       // 배열 index = 선택값 - 1
                System.out.println("설명: " + details[subChoice - 1]);
                System.out.println();
            }
            else {
                // 메뉴 번호 범위 벗어났을 때
                System.out.println("잘못된 입력입니다.");
            }
        }
    }
